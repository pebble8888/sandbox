<h1>Listing comments</h1>

<table>
  <tr>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.content %></td>
    <td><%= link_to 'Show', [comment.shop, comment] %></td>
    <td><%= link_to 'Edit', edit_shop_comment_path(comment.shop, comment) %></td>
    <td><%= link_to 'Destroy', [comment.shop, comment], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

